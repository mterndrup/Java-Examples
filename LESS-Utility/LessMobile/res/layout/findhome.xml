<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inside"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:background="#000000" >

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Find Your Home"
            android:textColor="#FFF"
            android:textSize="@dimen/header_textsize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:background="#4274b9"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >

        <EditText
            android:id="@+id/findhome_edittext"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/edittext_height"
            android:layout_marginTop="@dimen/findhome_marginTop"
            android:background="@drawable/edittext"
            android:hint="Enter Your Address"
            android:inputType="textNoSuggestions"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="@dimen/edittext_texsize" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/findhome_edittext"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="City"
            android:textColor="#000000"
            android:textSize="@dimen/title_textsize" />

        <TextView
            android:id="@+id/cityselection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/findhome_edittext"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/city"
            android:text="@string/cityselection"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/title_textsize" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/findhome_edittext"
            android:layout_marginTop="120dp"
            android:background="@drawable/button_type3"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/button_textsize" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/continue_button"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_type4"
            android:text="back"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/button_textsize" />
    </RelativeLayout>

</LinearLayout>