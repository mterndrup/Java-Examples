<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            
            <item>
                <shape>
                     <!--  Gradient Bg for Button -->
				   <gradient
				      android:startColor="@color/button_type4_pressed"
				      android:endColor="@color/button_type4_pressed"
				      android:angle="270" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>
            
            <item>
                <shape android:shape="rectangle">
                	<gradient
				      android:startColor="@color/button_type3_normal_end"
				      android:endColor="@color/button_type3_normal_end"
				      android:angle="90" />   
				</shape>
            </item>
        </layer-list>
    </item>


</selector>