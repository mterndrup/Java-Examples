<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popup_element"
    android:orientation="vertical"
    android:background="#4274b9" >
    
    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="#000000" >

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="MESSAGE SUBJECT"
                android:textColor="#FFF"
                android:textSize="@dimen/header_textsize" />
        </RelativeLayout>
    
	    
		<ListView
	        android:id="@+id/contactus_listview"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/contactus_listview_height"
	        android:layout_marginTop="50dp"/>
	        <!-- 
	        android:cacheColorHint="@android:color/transparent" --> 

		<LinearLayout
		    android:id="@+id/button_bottom"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="#4274b9"
		    android:orientation="vertical"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin" >

		    <Button
		        android:id="@+id/continue_button"
		        android:layout_width="fill_parent"
		        android:layout_height="@dimen/button_height"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/button_type3"
		        android:text="Continue"
		        android:textColor="#FFFFFF"
                android:textSize="@dimen/button_textsize"  />

		    <Button
		        android:id="@+id/back_button"
		        android:layout_width="fill_parent"
		        android:layout_height="@dimen/button_height"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/button_type4"
		        android:text="back"
		        android:textColor="#FFFFFF"
                android:textSize="@dimen/button_textsize"  />
		</LinearLayout>

</LinearLayout>
