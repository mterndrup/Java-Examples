<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/inside"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="#BBFFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="#000000" >

                <TextView
                    android:id="@+id/pageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="SPENDING GOAL"
                    android:textColor="#FFF"
                    android:textSize="@dimen/header_textsize" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/background_type2"
                android:weightSum="2" >

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/changepass_button_height"
                    android:layout_weight="1"
                    android:background="@drawable/button_type2"
                    android:gravity="bottom|left"
                    android:paddingLeft="@dimen/changepass_button_padding"
                    android:text="cancel"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/title_textsize" />

                <Button
                    android:id="@+id/retry_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/changepass_button_height"
                    android:layout_weight="1"
                    android:background="@drawable/button_type2"
                    android:gravity="bottom|right"
                    android:paddingRight="@dimen/changepass_button_padding"
                    android:text="save"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/title_textsize" />
            </LinearLayout>

            <TextView
                android:id="@+id/budget_value"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/budget_white_height"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textColor="@color/menu_title_color"
                android:textSize="@dimen/title_textsize" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/weatherforcastTable"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:stretchColumns="0,1,2" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="1"
                        android:textColor="#FFF"
                        android:textSize="@dimen/title_textsize" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="2"
                        android:textColor="#FFF"
                        android:textSize="@dimen/title_textsize" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="3"
                        android:textColor="#FFF"
                        android:textSize="@dimen/title_textsize" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="4"
                        android:textColor="#FFF"
                        android:textSize="@dimen/title_textsize" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="5"
                        android:textColor="#FFF"
                        android:textSize="@dimen/title_textsize" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="6"
                        android:textColor="#FFF"
                        android:textSize="@dimen/title_textsize" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="7"
                        android:textColor="#FFF"
                        android:textSize="@dimen/title_textsize" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="8"
                        android:textColor="#FFF"
                        android:textSize="@dimen/title_textsize" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="9"
                        android:textColor="#FFF"
                        android:textSize="@dimen/title_textsize" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="15dp"
                        android:textColor="#FFF"
                        android:textSize="@dimen/title_textsize" />

                    <TextView
                        android:id="@+id/textView0"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="0"
                        android:textColor="#FFF"
                        android:textSize="@dimen/title_textsize" />

                    <LinearLayout
                        android:id="@+id/test"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cell_height"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/delete"
                            android:layout_width="@dimen/delete_button"
                            android:layout_height="@dimen/delete_button"
                            android:gravity="center"
                            android:src="@drawable/delete" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
    </RelativeLayout>

</LinearLayout>