<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#BBFFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/inside"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="#BBFFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/background_type2"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="250dp" >

                <TextView
                    android:id="@+id/areyousure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/findhome_edittext"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/city"
                    android:text="Are you sure you want to reset your password?"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/title_textsize" />

                <LinearLayout
                    android:id="@+id/buttons"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/background_type2"
                    android:weightSum="2" >

                    <Button
                        android:id="@+id/cancel_button_popup"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/changepass_button_height"
                        android:layout_weight="1"
                        android:background="@drawable/button_type2"
                        android:gravity="bottom|left"
                        android:paddingLeft="@dimen/changepass_button_padding"
                        android:text="cancel"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/title_textsize" />

                    <Button
                        android:id="@+id/reset_button_popup"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/changepass_button_height"
                        android:layout_weight="1"
                        android:background="@drawable/button_type2"
                        android:gravity="bottom|right"
                        android:paddingRight="@dimen/changepass_button_padding"
                        android:text="reset"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/title_textsize" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>